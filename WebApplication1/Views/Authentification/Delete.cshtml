@model WebApplication1.Models.Client

@{
    ViewData["Title"] = "Supprimer le Client";
}

<h1>Supprimer le Client</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce client ?</h3>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Prénom</dt>
        <dd class="col-sm-10">@Model.Prenom</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </div>
</form>
