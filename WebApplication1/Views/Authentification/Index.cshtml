@{
}
@model IEnumerable<WebApplication1.Models.Client>

@{
    ViewData["Title"] = "Liste des Clients";
}

<h1>Liste des Clients</h1>

<p>
    <a asp-action="Inscription" class="btn btn-primary">Ajouter un Client</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Prenom)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Email)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Prenom</td>
                <td>@client.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
